<%-include(defaultView('partial/head'))%>
<%-include(defaultView('partial/navbar'))%>

<style>
.actions-col {
    width: 60px;
}
</style>

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Cache List
        </div>
        <div class="card-content p-5">
            <table class="table striped table-border mt-4" data-role="table" data-cls-table-top="row flex-nowrap" 
                data-cls-search="cell-md-8" data-cls-rows-count="cell-md-4">
                <thead>
                    <tr>
                        <th class="actions-col"></th>
                        <th data-sortable="true">Type</th>
                        <th data-sortable="true">Components</th>
                        <th data-sortable="true">Size</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let key of Object.keys(storage)) { %>
                        <tr>
                            <td>
                                <a href="<%=baseUrl%>/clear/<%=key%>" class="button alert">
                                    <span class="mif-bin"></span>
                                </a>
                            </td>
                            <td>
                                <a href="<%=baseUrl%>/list/<%=key%>">
                                    <%=key%>
                                </a>
                            </td>
                            <td>
                                <%=Object.keys(storage[key]).length%>
                            </td>
                            <td><%=sizeOf(storage[key])%></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>